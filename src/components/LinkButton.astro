---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  target?: string;
}

const {
  href,
  className,
  ariaLabel,
  title,
  disabled = false,
  target = "_self",
} = Astro.props;
---

<a
  type="button"
  target={target}
  href={disabled ? "#" : href}
  tabindex={disabled ? "-1" : "0"}
  class={`group ${className} ${disabled ? "disabled" : ""}`}
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
>
  <slot />
</a>

<style>
  a {
    @apply hover:text-skin-accent;
  }
  a.disabled {
    @apply cursor-default pointer-events-none opacity-40;
  }
</style>
