---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Socials from "@components/Socials.astro";
import getSortedPosts from "@utils/getSortedPosts";
import { SOCIALS } from "@config";
import type { CollectionEntry } from "astro:content";
import NoteSummaryCard from "@components/NoteSummaryCard.astro";

const posts = await getCollection("garden");
const sortedPosts = getSortedPosts(posts) as CollectionEntry<"garden">[];

const streamPosts = await getCollection("stream");
const sortedStreamPosts = getSortedPosts(
  streamPosts
) as CollectionEntry<"stream">[];

const socialCount = SOCIALS.filter(social => social.active).length;

// Dummy curated links
const curatedLinks = [
  { title: "My Favorite Development Tools", slug: "favorite-dev-tools" },
  { title: "Getting Started with Astro", slug: "astro-intro" },
  { title: "Why I Love Digital Gardening", slug: "digital-gardening-love" },
  { title: "The Art of Code Refactoring", slug: "code-refactoring-art" },
  {
    title: "Building a Personal Brand as a Developer",
    slug: "dev-personal-brand",
  },
];
---

<Layout>
  <Fragment slot="header">
    <Header />

    <section
      id="hero"
      class="mb-16 pt-44 max-lg:pt-16 z-50 relative max-xl:pl-12 max-sm:pl-0"
    >
      <div
        class="flex flex-col-reverse md:flex-row items-start gap-8 justify-between"
      >
        <div class="lg:w-3/5 mt-8 md:mt-0 flex flex-col font-light gap-4">
          <div class="flex items-center justify-center gap-8 max-sm:pl-4">
            <h1
              class="text-4xl max-sm:text-2xl flex flex-col start-0 md:text-5xl lg:text-7xl font-black mb-4 relative text-balance"
            >
              <span
                class="absolute max-sm:-left-4 max-sm:text-4xl -left-16 -top-10 text-6xl opacity-10 sm:text-7xl max-sm:-top-6 sm:-top-12 md:-top-16 md:text-8xl lg:-top-24 lg:text-9xl"
                >Hello.</span
              >
              I'm MJ Meyer <span
                class="text-2xl max-sm:text-sm opacity-80 font-medium uppercase"
              >
                AKA the Dadalorian
              </span>
            </h1>
            <img
              class="block lg:hidden dark:hidden w-1/3 start-0"
              src="./profile-light.png"
              alt="MJ Meyer Profile Image Light"
            />
            <img
              class="lg:dark:hidden dark:block hidden w-1/3 start-0"
              src="./profile-dark.png"
              alt="MJ Meyer Profile Image Dark"
            />
          </div>
          <p class="text-2xl max-sm:text-xl max-lg:px-12">
            In a galaxy plagued by bad software, bugs, atrocious UX, and legacy
            UI, I've dedicated the last 15 years to crafting stellar digital
            experiences using HTML, CSS, and a variety of JS/TS frameworks &
            libraries, including React, Angular, Next, Remix, Astro, and
            Node.js.
          </p>
          <p class="text-2xl max-sm:text-xl max-lg:px-12">
            As a Star Wars-loving, Xbox-jamming, BBQ (braai) aficionado, my
            mission goes beyond vanquishing the digital dark side. With my
            incredible wife by my side, I guide my three foundlings in "the way"
            as we embrace our new adventure moving from SA ðŸ‡¿ðŸ‡¦ to NZ&nbsp;ðŸ‡³ðŸ‡¿.
          </p>
          <p class="text-2xl max-sm:text-xl max-lg:px-12">
            This is where I cultivate my <LinkButton
              href="/garden"
              className="text-skin-accent underline underline-offset-4 decoration-dashed"
              >digital garden</LinkButton
            >. You can learn more <LinkButton
              href="/about"
              className="text-skin-accent underline underline-offset-4 decoration-dashed"
              >about</LinkButton
            > me, see what tools I <LinkButton
              href="/uses"
              className="text-skin-accent underline underline-offset-4 decoration-dashed"
              >use</LinkButton
            >, or follow what I'm up to <LinkButton
              href="/now"
              className="text-skin-accent underline underline-offset-4 decoration-dashed"
              >now</LinkButton
            >.
          </p>
          <div
            class="lg:hidden text-center flex justify-start flex-col items-center pt-12 max-md:pt-4"
          >
            <span
              class="text-sm opacity-60 font-montserrat font-semibold uppercase text-skin-heading"
              >Connect with me:</span
            >
            {socialCount > 0 && <Socials centered />}
          </div>
        </div>
        <div
          class="max-lg:hidden lg:w-2/5 -mt-16 flex flex-col gap-8 items-center"
        >
          <img
            class="block dark:hidden"
            src="./profile-light.png"
            alt="MJ Meyer Profile Image Light"
          />
          <img
            class="dark:block hidden"
            src="./profile-dark.png"
            alt="MJ Meyer Profile Image Dark"
          />
          <div class="text-left flex justify-start flex-col items-center gap-4">
            <span
              class="text-sm opacity-60 font-montserrat font-semibold uppercase text-skin-heading"
              >Connect with me:</span
            >
            {socialCount > 0 && <Socials centered />}
          </div>
        </div>
      </div>
    </section>
  </Fragment>
  <main
    class="px-4 pb-12 sm:px-8 md:px-16 lg:px-32 bg-gradient-to-b to-skin-highlight/20 from-skin-fill"
  >
    <section
      id="content"
      class="flex gap-24 w-full flex-col pt-16 sm:flex-row overflow-hidden"
    >
      <div
        id="curated-links"
        class="flex flex-col mb-16 w-3/5 gap-6 sm-max:w-full text-2xl font-light"
      >
        <h2 class="text-6xl z-10 font-black relative">
          <span
            class="absolute font-extrabold -left-4 -top-12 opacity-60 -z-10 text-skin-hightlight text-7xl"
            >Noteworthy</span
          >Favorites
        </h2>
        <p>
          These are some of my favorite notes and things I like to ponder about.
          Not because they're fully grown, but I find them interesting to think
          about and the rest of the digital garden will be crafted around these
          notes.
        </p>
        <ul class="space-y-4 pt-4 pl-6">
          {
            curatedLinks.map(link => (
              <li>
                <a
                  href={`/garden/${link.slug}`}
                  class="text-skin-accent hover:underline"
                >
                  {link.title}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="recent w-2/5 text-lg flex flex-col gap-8 font-light">
        <div id="recent-garden" class="mb-16 flex flex-col gap-4">
          <h2 class="text-3xl font-black relative z-10">
            <span
              class="absolute font-extrabold -left-4 -top-10 opacity-60 -z-10 text-skin-hightlight text-6xl"
              >Recent</span
            >From The Garden
          </h2>
          <p>
            Thoughts, notes and ideas that have grown, changed, or formed new
            connections with each other.
          </p>
          <ul class="my-8 space-y-12 pt-2">
            {
              sortedPosts
                .slice(0, 3)
                .map(({ data, slug, collection }) => (
                  <NoteSummaryCard
                    href={slug}
                    frontmatter={data as CollectionEntry<"garden">["data"]}
                    cardType={collection as "garden"}
                  />
                ))
            }
          </ul>
          <LinkButton
            className="flex border-b border-skin-card items-center text-sm font-bold uppercase justify-center"
            href="/garden"
          >
            <span
              class="bg-skin-card py-1 text-skin-fill flex group-hover:text-skin-base items-center -mb-4 pl-6 pr-4 rounded-2xl"
              >All Garden Notes
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 ml-1 fill-skin-fill group-hover:fill-skin-base"
              >
                <path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </span>
          </LinkButton>
        </div>
        <div id="stream" class="mb-16 gap-4 flex flex-col text-lg">
          <h2 class="text-3xl z-10 font-black relative">
            <span
              class="absolute font-extrabold -left-4 -top-10 opacity-60 -z-10 text-skin-hightlight text-6xl"
              >Recent</span
            >From The Stream
          </h2>
          <p>
            Raw resources from across the WWW that I've woven into my stream of
            knowledge, forming the foundation of my notes.
          </p>
          <ul class="my-8 space-y-12 pt-2">
            {
              sortedStreamPosts
                .slice(0, 3)
                .map(({ data, slug, collection }) => (
                  <NoteSummaryCard
                    href={slug}
                    frontmatter={data as CollectionEntry<"stream">["data"]}
                    cardType={collection}
                  />
                ))
            }
          </ul>

          <LinkButton
            className="flex border-b border-skin-card items-center text-sm font-bold uppercase justify-center"
            href="/stream"
          >
            <span
              class="bg-skin-card text-skin-fill group-hover:text-skin-base py-1 flex items-center justify-center -mb-4 pl-6 pr-4 rounded-2xl"
              >All Stream Notes
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6 ml-1 fill-skin-fill group-hover:fill-skin-base"
              >
                <path
                  d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
                ></path>
              </svg>
            </span>
          </LinkButton>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
